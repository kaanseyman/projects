<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:elevation="12dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">>

                <ImageView
                    android:id="@+id/showerPp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/profileicon"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#8F8484"
                android:fontFamily="@font/cagliostro"
                android:text="Change"
                android:textColor="#e4e4e4"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/showUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/cagliostro"
                android:text="TextView"
                android:textColor="#8F8484"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/uploadButton"
                app:layout_constraintHorizontal_bias="0.366"
                app:layout_constraintStart_toStartOf="@+id/uploadButton"
                app:layout_constraintTop_toBottomOf="@+id/uploadButton" />

            <TextView
                android:id="@+id/showNL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cagliostro"
                android:text="TextView"
                android:textColor="#8F8484"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/showUsername"
                app:layout_constraintStart_toStartOf="@+id/showUsername"
                app:layout_constraintTop_toBottomOf="@+id/showUsername" />

            <TextView
                android:id="@+id/showEmail"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cagliostro"
                android:text="TextView"
                android:textColor="#8F8484"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/showNL"
                app:layout_constraintStart_toStartOf="@+id/showNL"
                app:layout_constraintTop_toBottomOf="@+id/showNL" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>