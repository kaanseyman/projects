<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/matchText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cagliostro"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#8F8484"
        android:textColorHint="#8F8484"
        android:textColorLink="#8F8484"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/matchButton"
        android:layout_width="129dp"
        android:layout_height="106dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/matchicon"
        app:layout_constraintEnd_toEndOf="@+id/matchText"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="@+id/matchText"
        app:layout_constraintTop_toBottomOf="@+id/matchText" />
</android.support.constraint.ConstraintLayout>